<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/ivPokemon"
            android:layout_width="113dp"
            android:layout_height="79dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvPokemonName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivPokemon"
            tools:text="Pokemon" />

        <TextView
            android:id="@+id/tvPokemonId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_number"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPokemonName" />

        <TextView
            android:id="@+id/tvPokemonAttr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/text_attributes"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPokemonId" />

        <TextView
            android:id="@+id/tvPokemonWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/text_weight"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPokemonAttr" />

        <TextView
            android:id="@+id/tvPokemonHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/text_height"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvPokemonWeight"
            app:layout_constraintTop_toBottomOf="@+id/tvPokemonAttr" />

        <TextView
            android:id="@+id/tvPokemonAbilities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/text_abilities"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPokemonHeight" />

        <TextView
            android:id="@+id/tvPokemonTypes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/text_types"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPokemonAbilities" />

        <TextView
            android:id="@+id/tvPokemonStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/text_stats"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPokemonTypes" />

        <TextView
            android:id="@+id/tvPokemonSpeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/text_speed"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPokemonSpecialDefense" />

        <TextView
            android:id="@+id/tvPokemonSpecialDefense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/text_special_defense"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPokemonSpecialAttack" />

        <TextView
            android:id="@+id/tvPokemonSpecialAttack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/text_special_attack"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPokemonDefense" />

        <TextView
            android:id="@+id/tvPokemonDefense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/text_defense"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPokemonAttack" />

        <TextView
            android:id="@+id/Attack_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="8dp"
            android:paddingTop="5dp"
            android:text="0"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tvPokemonDefense"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvPokemonAttack"
            app:layout_constraintTop_toBottomOf="@+id/tvPokemonHp"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@+id/tvPokemonAttack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/text_attack"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPokemonHp" />


        <TextView
            android:id="@+id/tvPokemonHp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/text_hp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPokemonStats" />

        <TextView
            android:id="@+id/PokemonHpNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="0"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/Attack_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.69"
            app:layout_constraintStart_toEndOf="@+id/tvPokemonHp"
            app:layout_constraintTop_toBottomOf="@+id/tvPokemonStats"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/Defense_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="108dp"
            android:layout_marginTop="9dp"
            android:text="0"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tvPokemonSpecialAttack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvPokemonDefense"
            app:layout_constraintTop_toBottomOf="@+id/Attack_number"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/Sattack_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="8dp"
            android:text="0"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tvPokemonSpecialDefense"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.558"
            app:layout_constraintStart_toEndOf="@+id/tvPokemonSpecialAttack"
            app:layout_constraintTop_toBottomOf="@+id/Defense_number"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/Sdefense_number"
            android:layout_width="9dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="144dp"
            android:layout_marginTop="24dp"
            android:text="0"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.032"
            app:layout_constraintStart_toEndOf="@+id/tvPokemonSpecialDefense"
            app:layout_constraintTop_toBottomOf="@+id/Sattack_number"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/Speed_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="0"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.696"
            app:layout_constraintStart_toEndOf="@+id/tvPokemonSpeed"
            app:layout_constraintTop_toBottomOf="@+id/Sdefense_number"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/WeightNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="0"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/Abilities_type"
            app:layout_constraintEnd_toStartOf="@+id/tvPokemonHeight"
            app:layout_constraintStart_toEndOf="@+id/tvPokemonWeight"
            app:layout_constraintTop_toBottomOf="@+id/tvPokemonAttr" />

        <TextView
            android:id="@+id/Abilities_type"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="17dp"
            android:layout_marginStart="28dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/Types_type"
            app:layout_constraintStart_toEndOf="@+id/tvPokemonAbilities" />

        <TextView
            android:id="@+id/Types_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/tvPokemonStats"
            app:layout_constraintStart_toEndOf="@+id/tvPokemonTypes" />

        <TextView
            android:id="@+id/HeightNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="0"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/Abilities_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvPokemonHeight"
            app:layout_constraintTop_toBottomOf="@+id/tvPokemonAttr"
            tools:ignore="MissingConstraints" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>