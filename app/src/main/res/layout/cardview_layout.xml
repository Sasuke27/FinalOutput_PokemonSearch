<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:onClick="CardViewOnClick"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        >


        <ImageView
            android:id="@+id/pokemon_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="54dp" />

        <TextView
            android:id="@+id/pokemon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pokemon_image"
            android:padding="35dp"
            android:text="@string/balbasaur"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/pokemon_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pokemon_name"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:visibility="visible" />

        <TextView
            android:id="@+id/pokemon_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/pokemon_id"
            android:layout_below="@+id/pokemon_id"
            android:text="TextView"
            android:visibility="visible" />

        <TextView
            android:id="@+id/pokemon_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/pokemon_height"
            android:layout_below="@+id/pokemon_height"
            android:text="TextView"
            android:visibility="visible" />

        <TextView
            android:id="@+id/pokemon_ability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/pokemon_weight"
            android:layout_below="@+id/pokemon_weight"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pokemon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/pokemon_ability"
            android:layout_below="@+id/pokemon_ability"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pokemon_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/pokemon_type"
            android:layout_below="@+id/pokemon_type"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pokemon_attack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/pokemon_hp"
            android:layout_below="@+id/pokemon_hp"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pokemon_defense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/pokemon_attack"
            android:layout_below="@+id/pokemon_attack"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pokemon_Sattack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/pokemon_defense"
            android:layout_below="@+id/pokemon_defense"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pokemon_Sdefense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/pokemon_Sattack"
            android:layout_below="@+id/pokemon_Sattack"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pokemon_Speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/pokemon_Sdefense"
            android:layout_below="@+id/pokemon_Sdefense"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pokemonStatsName_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pokemon_name"
            android:layout_toEndOf="@+id/pokemon_id"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pokemonStatsName_attack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/pokemon_height"
            android:layout_alignBottom="@+id/pokemon_height"
            android:layout_toEndOf="@+id/pokemon_id"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pokemonStatsName_defense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/pokemon_weight"
            android:layout_alignBottom="@+id/pokemon_weight"
            android:layout_toEndOf="@+id/pokemon_weight"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pokemonStatsName_Sattack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pokemonStatsName_defense"
            android:layout_toEndOf="@+id/pokemon_weight"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pokemonStatsName_Sdefense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pokemonStatsName_Sattack"
            android:layout_toEndOf="@+id/pokemon_ability"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pokemonStatsName_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/pokemonStatsName_Sdefense"
            android:layout_below="@+id/pokemonStatsName_Sdefense"
            android:text="TextView"
            android:visibility="invisible" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
